                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/kononenko_photo"
                android:layout_below="@+id/kononenko_photo"
                android:layout_toStartOf="@+id/kononenko_quote"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/kononenko_name"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/kononenko_name"
                android:layout_toStartOf="@+id/kononenko_quote"
                android:paddingEnd="0dp"
                android:paddingStart="24dp"
                android:text="@string/kononenko_title" />

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/stus_quote_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
