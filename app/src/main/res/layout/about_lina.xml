<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img512x512" />

        <TextView
            android:id="@+id/about_lina_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/app_logo"
            android:layout_marginTop="89dp"
            android:text="@string/about_lina"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/andrukhovych_quote_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/about_lina_title">
            <TextView
                android:id="@+id/andrukhovych_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/andrukhovych_photo"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/andrukhovych_photo"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/andrukhovych_quote"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/andrukhovych_photo"
                android:layout_width="94dp"
                android:layout_height="104dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/andrukhovych_name"
                android:src="@drawable/andrukhovych"/>

            <TextView
                android:id="@+id/andrukhovych_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/andrukhovych_photo"
                android:layout_below="@+id/andrukhovych_photo"
                android:layout_toStartOf="@+id/andrukhovych_quote"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/andrukhovych_name"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/andrukhovych_name"
                android:layout_toStartOf="@+id/andrukhovych_quote"
                android:paddingEnd="0dp"
                android:paddingStart="24dp"
                android:text="@string/andrukhovych_title" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/kononenko_quote_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/andrukhovych_quote_full">
            <TextView
                android:id="@+id/kononenko_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
