            <TextView
                android:id="@+id/stus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/stus_photo"
                android:layout_below="@+id/stus_photo"
                android:layout_toStartOf="@+id/stus_quote"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/stus_name"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stus_name"
                android:layout_toStartOf="@+id/stus_quote"
                android:paddingEnd="0dp"
                android:paddingStart="24dp"
                android:text="@string/stus_title" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
