            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/pakhlovska_name"
                android:layout_toStartOf="@+id/pakhlovska_quote"
                android:paddingEnd="0dp"
                android:paddingStart="24dp"
                android:text="@string/pakhlovska_title" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pakhlovska_quote_full"
            android:padding="16dp"
            android:text="@string/about_lina_disclaimer"
            android:textColor="#818181"
            android:textSize="12sp"/>
    </RelativeLayout>

</ScrollView>
